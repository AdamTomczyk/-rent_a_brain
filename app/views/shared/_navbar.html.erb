
<div class="container">
<div class="navbar mt-3 navbar-expand-sm navbar-light navbar-lewagon" position="relative:z-index: 99">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "Brain_logo_black.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
             <%= link_to "Home", root_path, class: "nav-link pr-4 pl-3 " %>
        </li>
        <li class="nav-item">
          <%= link_to "Brains", brains_path, class: "nav-link pr-4 pl-3" %>
        </li>
        <li class="nav-item dropdown mr-5">
          <%= image_tag "george.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "My Bookings", bookings_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
</div>
