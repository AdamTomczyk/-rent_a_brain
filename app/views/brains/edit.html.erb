<%= render "shared/navbar" %>

<div class="container">
  <div class="row">

    <div class="col-12">
      <h1 class="mt-5 mb-5" style="color:black">Editing Brain</h1>
    <%= simple_form_for(@brain) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :description %>
  </div>

  <div class="form-inputs">
    <%= f.input :price_per_minute %>
  </div>

  <div class="form-inputs">
    <%= f.input :iq %>
  </div>

  <div class="form-inputs">
    <%= f.input :eq %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary mt-3 mb-3" %>
  </div>
<% end %>

      <%= link_to 'Back to all brains', brains_path %>

    </div>

  </div>

</div>
