<%= render "shared/navbar" %>


<div class="container">
  <div class="row">
    <div class="col-12 d-flex align-items-end flex-column">
      <h1 class="mr-auto mt-5 mb-5" style="color:black">Hey <% if current_user %>
<%= current_user.fullname %><%end%>, <br>here are all your bookings 🧠 🧠 🧠</h1>
    </div>
  </div>
</div>

<div class="container">
 <h1 style="color:black" class="mb-5 mt-3">My Bookings</h1>
  <div class="row animated fadeInUp">
      <% @outgoing_bookings.each do |booking|  %>
          <div class="col-3 p-4 mb-5" id="genius_card" >
          <%= image_tag "#{booking.brain.icon_path}", alt: "Le Wagon", width: 90 %>
            <h5 class="pl-1 mt-5 mb-4">Your Total:<br> <%= booking.total %> ₿</h5>
            <h5 class="pl-1 mb-4"> <%= image_tag "shuttle", alt: "Start", width: 20 %>&nbsp; &nbsp; <%= booking.start_date.strftime("%B %d") %></h5>
             <h5 class="pl-1"> <%= image_tag "end", alt: "Start", width: 20 %>&nbsp; &nbsp; <%= booking.end_date.strftime("%B %d") %></h5>

        </div>
        <div class="col-1"></div>
      <% end %>
  </div>
</div>





